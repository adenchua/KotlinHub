<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_main_activity"
        android:orientation="vertical"
        tools:context=".Donation">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:gravity="center">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/cv_donation"
                                            android:layout_width="340dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            card_view:cardCornerRadius="6dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/paypal"
                        android:scaleType="fitXY"
                        android:padding="10dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Donate to Support Kotlin Hub"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/lightgray"/>

                <Button
                        android:id="@+id/btn_donation_paypal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="Donate with PayPal"
                        android:textColor="#FFFFFF"
                        android:background="#4285F4"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#282d2c"
            android:orientation="horizontal">

        <ImageButton
                android:id="@+id/btn_donation_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#111111"
                android:src="@drawable/home_default"
        />

        <ImageButton
                android:id="@+id/btn_donation_game"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#111111"
                android:src="@drawable/console_default"
        />

        <ImageButton
                android:id="@+id/btn_donation_donate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#111111"
                android:src="@drawable/heart_selected"
        />

    </LinearLayout>
</LinearLayout>