<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".GameActivity">

    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@color/colorPrimaryTop" />

    <!-- displays player 2 screen-->
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:rotation="180">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryTop"
                    android:text="PLAYER TWO"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/question_layout_player_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:background="@color/colorPrimaryTop"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Question goes here"
                    android:textColor="#FFFFFF" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:background="@color/colorPrimaryTop"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn_2_A"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_google_blue"
                        android:text="A"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                <Button
                        android:id="@+id/btn_2_B"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_google_red"
                        android:text="B"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                <Button
                        android:id="@+id/btn_2_C"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_google_yellow"
                        android:text="C"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                <Button
                        android:id="@+id/btn_2_D"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_google_green"
                        android:text="D"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- displays scoreboard in the middle-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

        <!-- Player 2 Scoreboard -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:rotation="180">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/colorPrimaryTop"
                    android:text="YOUR SCORE: "
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tv_score_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryTop"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="48sp" />
        </LinearLayout>

        <!-- Filler -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryTop"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/left_arrow_2" />

        </LinearLayout>

        <!-- player 1 scoreboard -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/colorPrimaryTop"
                    android:text="YOUR SCORE: "
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tv_score_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryTop"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="48sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- displays player 1 screen-->
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryTop"
                    android:text="PLAYER ONE"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/question_layout_player_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:background="@color/colorPrimaryTop"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Question goes here"
                    android:textColor="#FFFFFF" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:background="@color/colorPrimaryTop"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn_1_A"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_google_blue"
                        android:text="A"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                <Button
                        android:id="@+id/btn_1_B"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_google_red"
                        android:text="B"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                <Button
                        android:id="@+id/btn_1_C"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_google_yellow"
                        android:text="C"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                <Button
                        android:id="@+id/btn_1_D"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_google_green"
                        android:text="D"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@color/colorPrimaryTop" />

</LinearLayout>